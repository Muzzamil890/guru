= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-signin'}) do |f|
  %h2.form-signin-heading reset password
  .login-wrap
    = f.hidden_field :reset_password_token
    = f.password_field :password, placeholder: "Password", class: "form-control"
    = f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control"
    = f.submit "Change My Password", class: "button btn btn-lg btn-login btn-block"
