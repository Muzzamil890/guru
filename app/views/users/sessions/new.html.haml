= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2.form-signin-heading login
  .login-wrap
    = f.text_field :email, autofocus: "", placeholder: "Email", class: "form-control"
    = f.password_field :password, placeholder: "Password", class: "form-control"
    - if devise_mapping.rememberable?
      %label.checkbox
        = f.check_box :remember_me, class: "checkbox"
        Remember me
    %span.pull-left
      = link_to "Forgot Password?", new_user_password_path
    = f.submit "Sign In", class: "button btn btn-lg btn-login btn-block"
