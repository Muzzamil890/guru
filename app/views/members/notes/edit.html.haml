.row
  .col-lg-12
    .panel
      .panel-heading
        Edit Note
      .panel-body
        = form_for @note, url: member_note_path(@member, @note), method: 'put', html: { class: 'form-horizontal' } do |f|
          = render 'layouts/shared/errors', object: @note
          .form-group
            .col-lg-10
              = f.text_area :body, class: 'form-control'
          %br/
          = f.submit nil, class: 'btn btn-primary'
          = link_to 'Delete Note', member_note_path(@member, @note), confirm: 'Are you sure?', method: 'delete', class: 'btn btn-danger'
          = link_to 'Cancel', @member, class: 'btn'
