.row
  .col-lg-12
    .panel
      .panel-heading
        New User
      .panel-body
        = form_for @user, url: settings_users_path(@user), html: { class: 'form-horizontal' } do |f|
          = render 'layouts/shared/errors', object: @user
          .form-group
            = f.label :first_name, 'First Name', class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.text_field :first_name, class: 'form-control'
          .form-group
            = f.label :last_name, 'Last Name', class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.text_field :last_name, class: 'form-control'
          .form-group
            = f.label :phone, class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.text_field :phone, "placeholder data-mask" => "(999) 999-9999", class: 'form-control'
          .form-group
            = f.label :email, class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password, class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, 'Password Confirmation', class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.password_field :password_confirmation, class: 'form-control'
          .form-group
            = f.label :owner, 'Owner', class: 'col-lg-2 col-sm-2 control-label'
            .col-lg-10
              = f.check_box :owner, class: 'check_box'
          %br/
          = f.submit nil, class: 'btn btn-primary'
          = link_to 'Cancel', settings_users_path, class: 'btn'
